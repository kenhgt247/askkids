{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  /* ðŸ”¥ Sá»­a dÃ²ng nÃ y â€“ NGUYÃŠN NHÃ‚ GÃ‚Y Lá»–I */
  "include": ["src"],

  "exclude": [
    "node_modules",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "tsconfig.node.json"
  ]
}
